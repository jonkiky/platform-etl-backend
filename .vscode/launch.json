{
    "version": "0.2.0",
    "configurations": [
        // Main class configuration
        {
            "type": "scala",
            "request": "launch",
            // configuration name visible for the user
            "name": "etl run",
            // full name of the class to run
            "mainClass": "io.opentargets.etl.Main",
            // optional arguments for the main class
            "args": ["evidence"],
            // optional jvm properties to use
            "jvmOptions": [
                "-server", 
                "-Xms1G", 
                "-Xmx20G", 
                "-Dconfig.file=application.conf", 
                "-Dlogback.configurationFile=application.xml"
            ],
            // optional build target name in case there more than one
            // class with the same name
            "buildTarget": "root"
        },
        // Test class configuration
        {
            "type": "scala",
            "request": "launch",
            // configuration name visible for the user
            "name": "etl test",
            // full name of the class to run
            "testClass": "io.opentargets.etl.",
            // optional build target name in case there more than one
            // class with the same name
            "buildTarget": "root-test"
        }
    ]
}