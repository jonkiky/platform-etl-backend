{
    "version": "2.0.0",
    "command": "sbt",
    "tasks": [
      {
        "label": "clean"
      },
      {
        "label": "compile",
        "args": [
          "~ ; project ; compile"
        ],
        "isBackground": true,
        "group": {
            "kind": "build",
            "isDefault": true
        },
        "presentation": {
            "echo": true,
            "reveal": "always",
            "focus": false,
            "panel": "shared",
            "showReuseMessage": true,
            "clear": false
        },
        "problemMatcher": {
          "owner": "sbt",
          "fileLocation": "absolute",
          "pattern": {
            "regexp": "^\\[(error|warning)\\]\\s+(.+):(\\d+):\\s+(.+)$",
            "severity": 1,
            "file": 2,
            "line": 3,
            "message": 4
          },
          "background": {
            "activeOnStart": false,
            "beginsPattern": "^\\[info\\] root \\(in build file:.+\\)$",
            "endsPattern": "^\\d+\\. Waiting for source changes.+$"
          }
        }
      },
      {
        "label": "run disease",
        "presentation": {
            "echo": true,
            "reveal": "always",
            "focus": false,
            "panel": "shared",
            "showReuseMessage": true,
            "clear": false
        },
        "args": [
            "disease"
          ],
      },
      {
        "label": "run",
        "presentation": {
            "echo": true,
            "reveal": "always",
            "focus": false,
            "panel": "shared",
            "showReuseMessage": true,
            "clear": false
        }
      },
      {
        "label": "test",
        "presentation": {
            "echo": true,
            "reveal": "always",
            "focus": false,
            "panel": "shared",
            "showReuseMessage": true,
            "clear": false
        },
        "group": {
            "kind": "test",
            "isDefault": true
        }
      }
    ]
  }